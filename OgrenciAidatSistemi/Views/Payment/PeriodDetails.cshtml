@model PaymentPeriodView

<div class="container mt-5">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title p-2">Payment</h5>

            <dl class="row">
                <dt class="col-sm-2 text-nowrap">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Id)
                </dd>

                <dt class="col-sm-2 text-nowrap">
                    @Html.DisplayNameFor(model => model.StartDate)
                </dt>

                <dd class="col-sm-10 date">
                    @Html.DisplayFor(model => model.StartDate)
                </dd>

                <dt class="col-sm-2 text-nowrap">
                    @Html.DisplayNameFor(model => model.Occurrence)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Occurrence)
                </dd>

                <dt class="col-sm-2 text-nowrap">
                    @Html.DisplayNameFor(model => model.TotalAmount)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TotalAmount)
                </dd>


                @if (Model.Student != null)
                {
                    <h4 class="mt-5">Student</h4>
                    <div class="mt-3">
                        <dd class="col-sm-10 text-muted">
                            @Html.DisplayFor(model => model.Student.StudentId)
                        </dd>
                    </div>
                }
                else
                {
                    <dd class="col-sm-10 text-muted">
                        not find any student
                    </dd>
                }


                <h4 class="mt-5">Work Year</h4>
                <div class="mt-3">
                    @if (Model.WorkYear != null)
                    {
                        <partial name="_WorkYearDetailPartial" model="Model.WorkYear" />
                    }
                    else
                    {
                        <p>
                            Work year not available
                        </p>
                    }
                </div>

                <h4 class="mt-5">Payments</h4>
                <div class="mt-3">
                    @if (Model.Payments != null)
                    {
                        <partial name="_PaymentListPartial" model="Model.Payments" />
                    }
                    else
                    {
                        <p>
                            Payments not available
                        </p>
                    }
                </div>


            </dl>

        </div>
    </div>



    <p class="mt-5">
        <a asp-action="PeriodList" asp-controller="Payment" class="btn btn-primary">Show All Payments</a>
        <form asp-action="PeriodDeleteConfirmed" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <p class="mt-5">
            <a asp-action="List" asp-controller="Payment" class="btn btn-primary">Show All Payments</a>
            </p>
        </form>
    </p>
</div>
