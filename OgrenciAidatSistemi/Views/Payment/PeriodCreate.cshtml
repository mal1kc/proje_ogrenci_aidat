@model PaymentPeriodView
@{

    ViewData["Title"] = "Dönem Oluştur";


    var errors = TempData["MultipleErros"] as List<string>;
    if (errors == null)
    {
        TempData["MultipleErros"] = null;
        if (errors == null)
        {
            errors = new List<string>();
        }
        TempData["MultipleErros"] = errors;
    }


    if (ViewBag.Students == null)
    {

        errors.Add("Öğrenci bulunamadı. Lütfen öğrenci ekleyin.");
        TempData["MultipleErros"] = errors;
    }

    if (ViewBag.WorkYears == null)
    {
        errors.Add("Çalışma yılı bulunamadı. Lütfen çalışma yılı ekleyin.");
        TempData["MultipleErros"] = errors;
    }


    bool isSiteAdmin = false;
    @* if (ViewBag.IsSiteAdmin != null)
    {
        try
        {
            isSiteAdmin = Convert.ToBoolean(ViewBag.IsSiteAdmin);
        }
        catch (Exception)
        {
            isSiteAdmin = false;
        }
    } *@

}
<partial name="_MultiErrorMsgBox" />
<h2 class="mb-4">Dönem Oluştur</h2>
<div class="row">
    <div class="card p-4">
        <form asp-action="PeriodCreate" method="post">
            <div class="form-group">
                <label asp-for="WorkYearId" class="form-label"></label>
                <select asp-for="WorkYearId" class="form-select" id="WorkYearId" name="WorkYearId" required>
                    <option value="">Çalışma Yılı Seçiniz</option>
                    @foreach (var WorkYear in ViewBag.WorkYears)
                    {
                        <option value="@WorkYear.Id"> id: @WorkYear.Id - @WorkYear.StartDate.Month / @WorkYear.StartDate.Year - @WorkYear.EndDate.Month / @WorkYear.EndDate.Year
                            @if (isSiteAdmin == true)
                            {
                                <text> @WorkYear.School.Name</text>
                            }
                            else
                            {
                                <text> </text>
                            }
                        </option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="StudentId" class="form-label"></label>
                <select asp-for="StudentId" class="form-select" id="StudentId" name="StudentId" required>
                    <option value="">Öğrenci Seçiniz</option>
                    @foreach (var Student in ViewBag.Students)
                    {
                        <option value="@Student.Id"> @Student.StudentId : @Student.FirstName @Student.LastName
                            @if (isSiteAdmin == true)
                            {
                                <text> @Student.School.Name</text>
                            }
                            else
                            {
                                <text> </text>
                            }
                        </option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="form-label"></label>
                <input asp-for="StartDate" type="date" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="form-label"></label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PerPaymentAmount" class="form-label"></label>
                <input asp-for="PerPaymentAmount" class="form-control" />
                <span asp-validation-for="PerPaymentAmount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Occurrence" class="form-label"></label>
                <select asp-for="Occurrence" class="form-select"
                    asp-items="Html.GetEnumSelectList<Occurrence>()"></select>
                <span asp-validation-for="Occurrence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Oluştur" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>
</div>