@model SiteAdminView
@{
    ViewData["Title"] = "SignIn";
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div style="text-align: center;">
                <pre style="display: inline-block; text-align: left;">
.__.                .__.   .    ,  __.     ,
|  | _ ._. _ ._  _.*[__]* _| _.-+-(__ * __-+- _ ._ _ *
|__|(_][  (/,[ )(_.||  ||(_](_] | .__)|_)  | (/,[ | )|
    ._|
            </pre>
                </pre>
            </div>
            <form asp-action="SignInPost" method="post" onsubmit="return checkOnSubmit()">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group
        <div id=" message">
                    @if (TempData["CantSignIn"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            password or username is <b>wrong</b> !
                        </div>
                    }
                </div>
                <div class="form-group">
                    <label class="control-label" for="username">Username</label>
                    <input class="form-control" data-val="true" data-val-required="username" id="username"
                        name="username" type="username" value="">

                    <span class="text-danger field-validation-valid" data-valmsg-for="username"
                        data-valmsg-replace="true"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="d-flex flex-column align-items-center form-group mt-3">

                    <input type="submit" value="Sign In" class="btn btn-primary mb-3 w-50" id="signInButton
                        onsubmit=" return checkOnSubmit()" />
                    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary mb-1 w-50"
                        id="cancelButton">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
