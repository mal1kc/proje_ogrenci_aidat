@model OgrenciAidatSistemi.Models.StudentView

@{
    ViewData["Title"] = "Home Page";

    Layout = "/Views/Shared/Student/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="mb-4">Welcome, @Model.FirstName!</h1>

    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">Your Grades</h2>
                </div>
                <div class="card-body">
                    <partial name="_GradesPartial" model="Model.Grades" />
                </div>
            </div>
        </div>

        <div class="col-lg-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">Your Payment History</h2>
                </div>
                <div class="card-body">
                    <partial name="_PaymentHistoryPartial" model="Model.Payments" />
                </div>
            </div>
        </div>
    </div>
</div>
