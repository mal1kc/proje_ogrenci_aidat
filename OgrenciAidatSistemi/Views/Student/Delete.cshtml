@model StudentView

@{
    ViewData["Title"] = "Delete Student";
}

<h3>Are you sure you want to delete this Student?</h3>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Student</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2 text-nowrap">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2 text-nowrap">
                @Html.DisplayNameFor(model => model.StudentId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StudentId)
            </dd>

            <dt class="col-sm-2 text-nowrap">
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FirstName)
            </dd>

            <dt class="col-sm-2 text-nowrap">
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LastName)
            </dd>

            <dt class="col-sm-2 text-nowrap">
                @Html.DisplayNameFor(model => model.CreatedAt)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>

            <div class="row">
                <div class="col-md-6 border-start">

                    <h4 class="mt-5">School</h4>
                    <div class="mt-3">
                        @if (Model.School != null)
                        {
                            <partial name="_SchoolViewPartial" model="Model.School" />
                        }
                        else
                        {
                            <p>
                                School not available
                            </p>
                        }
                    </div>

                    <h4 class="mt-5">Payments</h4>
                    <div class="mt-3">
                        @if (Model.Payments != null)
                        {
                            <partial name="_PaymentHistoryPartial" model="Model.Payments" />
                        }
                        else
                        {
                            <p>
                                Payments not available
                            </p>
                        }
                    </div>

                    <h4 class="mt-5">Grades</h4>
                    <div class="mt-3">
                        @if (Model.Grades != null)
                        {
                            <partial name="_GradesPartial" model="Model.Grades" />
                        }
                        else
                        {
                            <p>
                                Grades not available
                            </p>
                        }
                    </div>

                    <h4 class="mt-5">Contact Info</h4>
                    <div class="mt-3">
                        @if (Model.ContactInfo != null)
                        {
                            <partial name="_ContactInfoPartial" model="Model.ContactInfo" />
                        }
                        else
                        {
                            <p>
                                Contact Info not available
                            </p>
                        }
                    </div>
                </div>
            </div>
        </dl>
    </div>
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="List" class="btn btn-secondary">Back to List</a>
</form>
