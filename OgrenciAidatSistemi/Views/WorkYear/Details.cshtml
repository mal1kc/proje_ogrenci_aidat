@model WorkYearView

@{
    ViewData["Title"] = "Work Year Details";
}

<div class="container mt-5">
    <hr>
    <div class="card">
        <div class="card-body">
            <h4 class="card-title text-center">Work Year</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2 text-nowrap">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Id)
                </dd>

                <dt class="col-sm-2 text-nowrap">
                    @Html.DisplayNameFor(model => model.School)
                </dt>

                <dd class="col-sm-10">
                    @if (Model.School != null)
                    {
                        <partial name="_SchoolDetailPartial" model="Model.School" />
                    }
                    else
                    {
                        <p>
                            School not available
                        </p>
                    }

                </dd>

                <dt class="col-sm-2 text-nowrap">
                    @Html.DisplayNameFor(model => model.StartDate)
                </dt>
                <dd class="col-sm-10 dateonly">
                    @Html.DisplayFor(model => model.StartDate)
                </dd>

                <dt class="col-sm-2 text-nowrap">
                    @Html.DisplayNameFor(model => model.EndDate)
                </dt>
                <dd class="col-sm-10 dateonly">
                    @Html.DisplayFor(model => model.EndDate)
                </dd>

                <dt class="col-sm-2 text-nowrap">
                    @Html.DisplayNameFor(model => model.CreatedAt)
                </dt>
                <dd class="col-sm-10 date">
                    @Html.DisplayFor(model => model.CreatedAt)
                </dd>

                <dt class="col-sm-2 text-nowrap">
                    @Html.DisplayNameFor(model => model.UpdatedAt)
                </dt>
                <dd class="col-sm-10 date">
                    @Html.DisplayFor(model => model.UpdatedAt)
                </dd>

                @if (Model.TotalAmount != null && Model.PaymentPeriods != null)
                {
                    <dt class="col-sm-2 text-wrap">
                        Total Amount of @Model.PaymentPeriods.Count
                    </dt>
                    <dd class="col-sm-10">
                        <p>
                            @Model.TotalAmount ₺ / $ / €
                        </p>
                    </dd>
                }
                else
                {
                    <dd class="col-sm-10">
                        <p>
                            Total Amount not available
                        </p>
                    </dd>
                }

            </dl>
        </div>
    </div>

</div>
