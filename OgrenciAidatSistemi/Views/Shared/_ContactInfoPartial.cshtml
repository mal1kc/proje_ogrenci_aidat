@model ContactInfoView

<div class="card">
    <div class="card-header">
        Contact Information
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">
            <strong>Phone Number:</strong> @Model.PhoneNumber
        </li>
        <li class="list-group-item">
            <strong>Email:</strong> @Model.Email
        </li>
        <li class="list-group-item">
            <strong>Addresses:</strong>
            @if (Model.Addresses != null && Model.Addresses.Count > 0)
            {
                foreach (var address in Model.Addresses)
                {
                    <p class="mb-0">@address</p>
                }
            }
            else
            {
                <p class="mb-0">No addresses available</p>
            }
        </li>
        <li class="list-group-item">
            <strong>Created At:</strong> @Model.CreatedAt.ToString("g")
        </li>
        <li class="list-group-item">
            <strong>Updated At:</strong> @Model.UpdatedAt.ToString("g")
        </li>
    </ul>
</div>