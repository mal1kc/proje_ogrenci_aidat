@model UserView
@{
    if(ViewBag.IsDebug == null)
    {
        ViewBag.IsDebug = false;
    }
    @if(ViewBag.UserRole == null){
        ViewBag.UserRole = UserRole.None;
    }
    string CardName = "userDetailCard" + Model.Id ?? "0";
    // if the viewbag is null, set the partial view title to an empty string
    // otherwise, set it to the value of the viewbag
    var partialViewTitle = "User Details";
    var isSAdmin = ViewBag.UserRole == UserRole.SiteAdmin;
    var isScAdmin = ViewBag.UserRole == UserRole.SchoolAdmin;
    var isUser = ViewBag.UserRole == UserRole.Student;
}

<div class="container-fluid py-0 my-0">
    <div class="card m-0">
        <div class="card-header" id="headingOne">
            <h5 class="mb-0">
                @partialViewTitle <button class="btn btn-link collapsed" type="button" data-bs-toggle="collapse"
                    data-bs-target="#@CardName" aria-expanded="false" aria-controls="userDetailCard">
                    <span class="triangle">&#9650;</span> <!-- This is a Unicode up arrow -->
                </button>
            </h5>
        </div>

        <div id="@CardName" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
            <div class="card-body">
                @if(isUser)
                {
                    <p></p>
                }else if((isScAdmin && (Model.Role == UserRole.SchoolAdmin || Model.Role == UserRole.Student) ) || isSAdmin)
                {
                <div class="row">
                    <div class="col">
                        <dl>
                            <dt class="col-sm-2 text-nowrap">
                                @Html.DisplayNameFor(model => model.Id)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Id)
                            </dd>

                            <dt class="col-sm-2 text-nowrap">
                                @Html.DisplayNameFor(model => model.FirstName)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.FirstName)
                            </dd>

                            <dt class="col-sm-2 text-nowrap">
                                @Html.DisplayNameFor(model => model.LastName)
                            </dt>

                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.LastName)
                            </dd>

                            <dt class="col-sm-2 text-nowrap">
                                @Html.DisplayNameFor(model => model.UpdatedAt)
                            </dt>

                            <dd class="col-sm-10">
                                @{
                                    var updatedAt = Model.UpdatedAt;
                                    if (updatedAt != default(DateTime))
                                    {
                                        @updatedAt.ToString("dd/MM/yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not Updated</span>
                                    }
                                }
                            </dd>
                        </dl>
                    </div>
                </div>

                <a asp-controller="@Model.Role" asp-action="Details" asp-route-id="@Model.Id"
                    class="btn btn-primary">ðŸ”—</a>
                }
            </div>
        </div>
    </div>
</div>