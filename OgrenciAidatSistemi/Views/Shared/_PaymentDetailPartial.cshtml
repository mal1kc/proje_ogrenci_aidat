@model PaymentView

@{
    var uniqCardName = "paymentDetailCard" + Model.Id;
    const string partialViewTitle = "Payment Details";
}

<div class="container-fluid py-0 my-0">
    <div class="card m-0">
        <div class="card-header" id="headingOne">
            <h5 class="mb-0">
                @partialViewTitle <button class="btn btn-link collapsed" type="button" data-bs-toggle="collapse"
                    data-bs-target="#@uniqCardName" aria-expanded="false" aria-controls="userDetailCard">
                    <span class="triangle">&#9650;</span> <!-- This is a Unicode up arrow -->
                </button>
            </h5>
        </div>
        <div id="@uniqCardName" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <dl>
                            <dt class="col-sm-2 text-nowrap">
                                @Html.DisplayNameFor(model => model.Id)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Id)
                            </dd>

                            <dt class="col-sm-2 text-nowrap">
                                @Html.DisplayNameFor(model => model.Amount)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Amount)
                            </dd>

                            <dt class="col-sm-2 text-nowrap">
                                @Html.DisplayNameFor(model => model.PaymentDate)
                            </dt>
                            <dd class="col-sm-10">
                                @{
                                    var paymentDate = Model.PaymentDate;
                                    if (paymentDate != default(DateTime))
                                    {
                                        @paymentDate.ToString("dd/MM/yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not Paid</span>
                                    }
                                }

                            </dd>

                            <dt class="col-sm-2 text-nowrap">
                                @Html.DisplayNameFor(model => model.Status)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Status)
                            </dd>


                            @if (Model.Student != null)
                            {
                                <h4 class="mt-5">Student</h4>
                                <div class="mt-3">
                                    <dd class="col-sm-10 text-muted">
                                        @Html.DisplayFor(model => model.Student.StudentId)
                                    </dd>
                                </div>
                            }
                        </dl>

                    </div>
                </div>
                <a asp-controller="Payment" asp-action="Details" asp-route-id="@Model.Id"
                    class="btn btn-primary float-end">ðŸ”—</a>
            </div>
        </div>
    </div>
</div>