@model PaymentPeriodView?
@{
    string uniqCardName = "paymentPeriodCard" + Model?.Id;
    var partialViewTitle = ViewData["paymentPeriodTitle"] ?? ("Payment Period" + Model?.Id);

    // check viewbag user role to determine delete button visibility
    var userRole = ViewBag.UserRole;
    var isDeleteVisible = userRole == UserRole.SiteAdmin || userRole == UserRole.SchoolAdmin;

}

<div class="container-fluid py-0 my-0">
    <div class="card m-0">
        <div class="card-header" id="headingOne">
            <h5 class="mb-0">
                @partialViewTitle <button class="btn btn-link collapsed" type="button" data-bs-toggle="collapse"
                    data-bs-target="#@uniqCardName" aria-expanded="false" aria-controls="@uniqCardName">
                    <span class="triangle">&#9650;</span> <!-- This is a Unicode up arrow -->
                </button>
            </h5>
        </div>
        <div id="@uniqCardName" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">

            <div class="card-body">
                @if (Model != null)
                {
                    <div class="row">
                        <div class="col">
                            <dl>
                                <dt class="col-sm-2 text-nowrap">
                                    @Html.DisplayNameFor(model => model.Id)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Id)
                                </dd>

                                <dt class="col-sm-2 text-nowrap">
                                    @Html.DisplayNameFor(model => model.StartDate)
                                </dt>
                                <dd class="col-sm-10 date">
                                    @Html.DisplayFor(model => model.StartDate)
                                </dd>

                                <dt class="col-sm-2 text-nowrap">
                                    @Html.DisplayNameFor(model => model.Occurrence)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Occurrence)
                                </dd>

                                <dt class="col-sm-2 text-nowrap">
                                    @Html.DisplayNameFor(model => model.TotalAmount)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.TotalAmount)
                                </dd>
                                <h4 class="mt-5">School Work Year</h4>
                                <div class="mt-3">
                                    @if (Model.WorkYear != null)
                                    {
                                        <partial name="_WorkYearDetailPartial" model="Model.WorkYear" />
                                    }
                                    else
                                    {
                                        <p>
                                            Work Year not available
                                        </p>
                                    }
                                </div>

                                <h4 class="mt-5">Payments</h4>
                                <div class="mt-3">
                                    @if (Model.Payments != null)
                                    {
                                        <partial name="_PaymentListPartial" model="Model.Payments" />
                                    }
                                    else
                                    {
                                        <p>
                                            Payments not available
                                        </p>
                                    }
                                </div>


                            </dl>
                        </div>
                    </div>


                    <p class="mt-5">
                        <a asp-action="PeriodList" asp-controller="Payment" class="btn btn-primary">Show All
                            PaymentPeriods</a>
                    <form asp-action="PeriodDeleteConfirmed" asp-route-id="@Model.Id" method="post"
                        onsubmit="return confirm('Are you sure you want to delete this item?');">
                        @if (isDeleteVisible)
                        {
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        }
                    </form>
                    </p>

                }else{
                    <p>
                        Payment Period not available
                    </p>
                }

            </div>
        </div>
    </div>
</div>
