@model SchoolAdminView

@{
    ViewData["Title"] = "Delete SchoolAdmin";
}

<h3>Are you sure you want to delete this SchoolAdmin?</h3>
    <div class="container mt-5">
        <h1 class="mb-4">School Admin Details</h1>
        <dl class="row">
            <dt class="col-sm-3">Id:</dt>
            <dd class="col-sm-9">@Model.Id</dd>
            <dt class="col-sm-3">School:</dt>
            <dd class="col-sm-9"> @if (Model.School != null)
                {
                    <partial name="_SchoolDetailPartial" model="Model.School" />
                }
                else
                {
                    <p>
                    School not avaliable
                    </p>
                }</dd>


            <dt class="col-sm-3">First Name:</dt>
            <dd class="col-sm-9">@Model.FirstName</dd>

            <dt class="col-sm-3">First Name:</dt>
            <dd class="col-sm-9">@Model.FirstName</dd>

            <dt class="col-sm-3">Last Name:</dt>
            <dd class="col-sm-9">@Model.LastName</dd>

            <dt class="col-sm-3">Email Address:</dt>
            <dd class="col-sm-9">@Model.EmailAddress</dd>

            <dt class="col-sm-3">Created At:</dt>
            <dd class="col-sm-9 date">@Model.CreatedAt</dd>

            <dt class="col-sm-3">Updated At:</dt>
            <dd class="col-sm-9 date">@Model.UpdatedAt</dd>
        </dl>
        <hr>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="List" class="btn btn-secondary"> Show All School Admins</a>
    <a class="btn btn-secondary" href='javascript:history.go(-1)'>Return to previous page</a>
    </form>
</div>
