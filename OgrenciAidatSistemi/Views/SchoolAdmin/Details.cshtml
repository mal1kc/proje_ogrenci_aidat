@model SchoolAdminView

<!DOCTYPE html>
<html>

<head>
    <title>School Admin Details</title>
</head>

<body>
    <div class="container mt-5">
        <h1 class="mb-4">School Admin Details</h1>
        <dl class="row">
            <dt class="col-sm-3">Id:</dt>
            <dd class="col-sm-9">@Model.Id</dd>
            <dt class="col-sm-3">School:</dt>
            <dd class="col-sm-9"> @if (Model.School != null)

                {
                    <partial name="_SchoolDetailPartial" model="Model.School" />
                }

                else

                {
                    <p>
                        School not avaliable
                    </p>
                }
            </dd>


            <dt class="col-sm-3">First Name:</dt>
            <dd class="col-sm-9">@Model.FirstName</dd>

            <dt class="col-sm-3">First Name:</dt>
            <dd class="col-sm-9">@Model.FirstName</dd>

            <dt class="col-sm-3">Last Name:</dt>
            <dd class="col-sm-9">@Model.LastName</dd>

            <dt class="col-sm-3">Email Address:</dt>
            <dd class="col-sm-9">@Model.EmailAddress</dd>

            <dt class="col-sm-3">Created At:</dt>
            <dd class="col-sm-9">@Model.CreatedAt</dd>

            <dt class="col-sm-3">Updated At:</dt>
            <dd class="col-sm-9">@Model.UpdatedAt</dd>
        </dl>
        <dt class="col-sm-3">Contact Info:</dt>
        <dd class="col-sm-9">
            @if (Model.ContactInfo != null)
            {
                <partial name="_ContactInfoPartial" model="Model.ContactInfo" />
            }
            else
            {
                <p>Contact Info not available</p>
            }
        </dd>

        <hr>

        <!-- Edit and Delete buttons -->
        <div class="row mt-4">
            <div class="col">
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post"
                    onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <a class="btn btn-primary ms-2" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    <button type="submit" class="btn btn-danger ms-2">Delete</button>
                    <a class="btn btn-secondary ms-2" asp-action="List" >Show All School Admins</a>
                    <a class="btn btn-secondary ms-2" href='javascript:history.go(-1)'>Return to previous page</a>
                </form>

            </div>
        </div>
    </div>
</body>

</html>
